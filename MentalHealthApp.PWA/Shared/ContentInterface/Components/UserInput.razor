@inherits ContentInterface.BaseClasses.UserInputBase

<div class="row" style="text-align: left!important; width: 100%!important;">
    <h6 style="margin: 0px!important;">Tap To Type</h6>
    <div class="content-body">
        <button type="button" class="btn btn-link m-2 p-0" style="text-decoration: none!important;"
            onclick="@(() => SaveEmotionLog())">
            <i class="fa fa-save"></i> Save
        </button>
        <textarea
            style="width: 100%!important; height: 120px!important; border-radius: 10px!important; border: none!important; outline: none!important;"
            placeholder="@Placeholder" @bind="EmotionLog" @oninput="InputEmotionLog"></textarea>
    </div>
</div>