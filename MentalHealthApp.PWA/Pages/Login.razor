@page "/Login"

@layout AuthLayout

@inherits LoginPage.LoginBase

<PageTitle>Log In</PageTitle>

<div class="container-fluid d-flex align-items-center justify-content-center creds-frm-wrapper">
    <div class="row">
        <div style="padding: 4rem;">
            <p style="font-size: 1.2rem!important; font-weight: 100!important; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif!important;">Control Anger, Anxiety, Depression & Guilt</p>
            <p style="font-size: 1.2rem!important; font-weight: 100!important; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif!important;">with this <span style="font-size: 1.4rem; font-weight: 700!important;">Simple & Effective</span> Therapy Tool</p>

            <img src="assets/images/Full-Color/White-Font/M4B_LOGO2_White.png" style="height:150px;" />
        </div>
    </div>

    <div id="data-form" class="row bg-light rounded-3" style="max-height: 300px!important; margin-top: 3rem!important;">
        @if(ErrorMessage is not null){
            <div class="text text-danger">
                @ErrorMessage
            </div>
        }
        <div class="form-group mt-3 mb-2 frm-group">
            <div class="input-group frm-input-group w-100 d-flex align-items-center justify-content-center flex-nowrap p-0 m-0">
                <div class="input-group-prepend">
                    <span class="input-group-text frm-input-group-txt">
                        <i class="fas fa-envelope frm-input-group-icon"></i>
                    </span>
                </div>
                <div class="form-floating m-0 w-100" style="background: none!important;">
                    <input type="email" class="form-control frm-control" id="email" placeholder="someone@server.com" @bind-value="Email">
                    <label for="email" class="frm-label d-flex align-items-center justify-content-center">Email*</label>
                </div>
            </div>
        </div>
        
        <div class="form-group mt-3 mb-2 frm-group">
            <div class="input-group frm-input-group w-100 d-flex align-items-center justify-content-center flex-nowrap p-0 m-0">
                <div class="input-group-prepend">
                    <span class="input-group-text frm-input-group-txt">
                        <i class="fas fa-lock frm-input-group-icon"></i>
                    </span>
                </div>
                <div class="form-floating m-0 w-100" style="background: none!important;">
                    <input type="password" class="form-control frm-control" id="password" placeholder="********" @bind-value="Password">
                    <label for="password" class="frm-label d-flex align-items-center justify-content-center">Password*</label>
                </div>
            </div>
        </div>
        
        <button type="button" class="btn btn-primary" style="background: #002363!important; outline: none!important; border: none!important; box-shadow: none!important; margin: 5px!important;" @onclick="AuthenticateUser">Log In</button>

        <p style="margin: 4px!important;"><a href="/register" id="alt-link" class="link-dark link-offset-2 link-underline-opacity-100-hover" style="text-decoration: none!important; font-size: 12px!important;">Sign Up?</a></p>
    </div>
</div>


<style>
    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>
